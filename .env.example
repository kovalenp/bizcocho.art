DATABASE_URI=postgres://postgres:postgres@localhost:5432/bizcocho
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Environment
NODE_ENV=development  # development | production

# Logging
LOG_LEVEL=debug  # fatal | error | warn | info | debug | trace (default: debug in dev, info in prod)

# Optional
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
SITE_URL=http://localhost:4321
# Email - Development (Mailpit: UI at http://localhost:8025)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM="bizcocho.art" <hola@bizcocho.art>

# Email - Production (Resend)
# Option 1: Resend SDK (preferred for analytics)
# RESEND_API_KEY=re_xxxxx
#
# Option 2: Resend SMTP
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=465
# SMTP_USER=resend
# SMTP_PASS=re_xxxxx
